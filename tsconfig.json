{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@data/*": ["data/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "env.d.ts",
    "astro.config.mjs",
    "scripts"
  ]
}
